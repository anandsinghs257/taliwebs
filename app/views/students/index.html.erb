<div class="container">
  <div class="card mt-5">
    <div class="card-header">
      <h1>Drivers</h1>      
    </div>
    <div class="card-body">     
      <div class="table-responsive">      
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Subject</th>
              <th>Marks</th>          
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @students.each do |s| %>
            <tr>
              <td><%= s.name %></td>
              <td><%= s.subject %></td>
              <td><%= s.marks %></td>
              <td><%= link_to 'Edit', edit_student_path(s), class: "btn btn-warning" %></td>
              <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to 'New student', new_student_path, class: "btn btn-primary mt-3" %>
      <% if @current_user %>
        <%= link_to("Logout", destroy_user_session_path, :method => :delete, class: "btn btn-primary mt-3") %>
      <% else %>
        <%= link_to 'Login', new_user_session_path %>
      <% end %>
    </div>
  </div>
</div>
